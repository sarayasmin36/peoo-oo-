<body>
  <!-- Título da página -->
  <h1>Editar Evento</h1>
  
  <!-- Formulário de edição de evento -->
  <form action="/eventos/{{evento.codigo}}/editar" method="POST">
    <!-- Campo para editar o nome do evento -->
    <label for="nome">Nome do Evento:</label>
    <input type="text" name="nome" id="nome" value="{{evento.nome}}" required> <!-- O valor do campo é preenchido com o nome do evento existente -->

    <!-- Campo para editar o organizador do evento -->
    <label for="organizador">Organizador:</label>
    <input type="text" name="organizador" id="organizador" value="{{evento.organizador}}" required> <!-- O valor do campo é preenchido com o nome do organizador existente -->

    <!-- Campo para editar a data do evento -->
    <label for="data">Data:</label>
    <input type="date" name="data" id="data" value="{{evento.datas}}" required> <!-- O valor do campo é preenchido com a data do evento existente -->

    <!-- Campo para editar o local do evento -->
    <label for="lugar">Lugar:</label>
    <input type="text" name="lugar" id="lugar" value="{{evento.lugar}}" required> <!-- O valor do campo é preenchido com o local do evento existente -->

    <!-- Botão para salvar as alterações feitas no evento -->
    <button type="submit">Salvar Alterações</button>
  </form>

  <!-- Link para voltar a outra página -->
  <a href="/outra-pagina">
    <button>Cancelar</button> <!-- Botão para cancelar a edição e voltar -->
  </a>
</body>