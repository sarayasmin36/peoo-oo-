<body>
  <header>
    <h3> &#10036; Eventario </h3>
  </header>

  <body>
    <h1>Participe</h1>
    <h2>Participe de eventos!</h2>
    <h5>Eventos disponíveis:</h5>
    <body>
  <div class="container2">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome do Evento</th>
          <th scope="col">Organizador</th>
          <th scope="col">Data</th>
          <th scope="col">Lugar</th>
        </tr>
      </thead>
      <tbody>
        {{#each eventos}}
          <tr>
            <td>{{this.codigo}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.organizador}}</td>
            <td>{{datas_formatada}}</td>
            <td>{{this.lugar}}</td>
          </tr>
        {{else}}
          <tr>
            <td colspan="5" class="text-center">Nenhum evento encontrado</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

    <h2>Inscrever Participante</h2>
      <form id="participante-form" action="/participar" method="POST">
    <label for="participante-nome">Nome do Participante:</label>
    <input type="text" name="nome" id="participante-nome" placeholder="Insira um nome completo" required>

    <label for="participante-email">E-mail:</label>
    <input type="email" name="email" id="participante-email" required>

    <label for="evento-selecionado">Escolha um evento:</label>
    <select style="width: 1169px;"  id="evento-selecionado" name="evento_id" required>
      <option value="" disabled selected>Selecione um evento</option>
      {{#each eventos}}
        <option value="{{this.codigo}}">{{this.nome}}</option>
      {{/each}}
    </select>

    <button type="submit">Inscrever</button>
    </form>

    </section>

    <div class="container1">
      <a href="/participantes">
        <button>Clique aqui para ver lista de participantes </button>
      </a>

      <a href="/">
        <button>Clique aqui para voltar a página inicial</button>
      </a>
    </div>

    <script>
document.addEventListener("DOMContentLoaded", function () {
  document.getElementById("participante-form").addEventListener("submit", function (event) {
    event.preventDefault(); // Impede o envio imediato do formulário

    // Exibe o pop-up
    document.getElementById("popup").style.display = "block";

    // Simula o envio após 2 segundos (para dar tempo do usuário ver)
    setTimeout(() => {
      event.target.submit(); // Agora envia o formulário
    }, 2000);
  });

  // Função para fechar o pop-up
  window.fecharPopup = function () {
    document.getElementById("popup").style.display = "none";
  };
});
</script>

<!-- Estrutura do pop-up -->
<div id="popup" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
  background: white; padding: 20px; border: 2px solid #f572cedc; box-shadow: 0px 0px 10px rgba(0,0,0,0.2);">
  <p>✅ Participação confirmada! Redirecionando...</p>
  <button onclick="fecharPopup()">Fechar</button>
</div>

  </body>
</html>
