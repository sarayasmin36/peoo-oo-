<style>
  body {
    font-family: monospace;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
    background-image: url('');
    background-size: cover;  /* Faz a imagem cobrir toda a tela */
    background-position: center;  /* Centraliza a imagem */
    background-attachment: fixed;  /* A imagem fica fixa quando rolar a página */
  }

  header {
    background-color: #f572cedc;
    color: white;
    text-align: left;
    padding: 2px;
  }

  main {
    max-width: 1000px;
    margin: auto;
    margin-top: 20px;
    padding: 10px;
    background-color: #fff;
    border: 1px solid #ddd;
  }

  section {
    margin-bottom: 20px;
  }

  h1 {
    margin: 5px;
    margin-bottom: -10px;
    font-size: 70px;
    text-align: center;
    padding-top: 80px;
    padding-left: 30px;
    padding-right: 30px;
  }

  h2 {
    margin: 5px;
    margin-bottom: 5px;
    font-size: 40px;
    text-align: center;
    padding-top: 70x;
    padding-left: 30px;
    padding-right: 30px;
  }

  h5 {
    margin: 5px;
    margin-bottom: 5px;
    font-size: 20px;
    text-align: center;
    padding-top: 100x;
    padding-left: 30px;
    padding-right: 30px;
  }

  label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    margin-left: 180px;
  }

  input, select, button {
    padding: 8px; /* Isso adiciona um espaço dentro do campo de input */
    border: 1px solid #000; /* Apenas para ilustrar a borda do input */
    width: 1150px;
    margin-bottom: 10px;
    margin-left: 180px;
  }

  .container {
    flex-direction: column; /* Organiza os itens verticalmente */
    justify-content: center; /* Centraliza verticalmente */
    align-items: center; /* Centraliza horizontalmente */
    height: 100vh; /* Ocupa toda a altura da tela */
    margin: 0; /* Remove margens padrão */
    gap: 20px; /* Espaço entre os botões */
  }

  button {
    background-color: #f572cedc;
    color: white;
    font-family: monospace;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 5px;
    margin-right: 100px;
    padding: 10px 20px;
    border: none;
    text-align: center;
    width: 1169px;  /* Define a largura do botão igual ao input */
  }

  button:hover {
    background-color: #f572ce65;
  }
</style>

<body>
  <header>
    <h3> &#10036; Eventario </h3>
  </header>

  <body>
    <h1>Participe</h1>
    <h2>Participe de eventos!</h2>
    <h1>Eventos disponíveis:</h1>
    <body>
  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome do Evento</th>
          <th scope="col">Organizador</th>
          <th scope="col">Data</th>
          <th scope="col">Lugar</th>
        </tr>
      </thead>
      <tbody>
        {{#each eventos}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.organizador}}</td>
            <td>{{this.datas}}</td>
            <td>{{this.lugar}}</td>
          </tr>
        {{else}}
          <tr>
            <td colspan="5" class="text-center">Nenhum evento encontrado</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

    <h2>Inscrever Participante</h2>
      <form id="participante-form">
        <label for="participante-nome">Nome do Participante:</label>
        <input type="text" id="participante-nome" placeholder="Insira um nome completo" required>

        <label for="participante-email">E-mail:</label>
        <input type="email" id="participante-email" required>

        <!-- SELECT -->
        <form action="/participar" method="POST">
        <label style="width: 1169px;" for="evento-selecionado">Escolha um evento:</label>
        <select id="evento-selecionado" name="evento_id" required>
        <option value="" disabled selected>Selecione um evento</option>
        {{#each eventos}}  <!-- Verifique se há eventos para iterar -->
        <option value="{{this.id}}">{{this.nome}} - {{this.organizador}} -- {{this.datas}}</option>
        {{/each}}
        </select>
        <button type="submit">Inscrever</button>
      </form>
    </section>

    <div class="container">
      <a href="/">
        <button>Clique aqui para voltar a página inicial</button>
      </a>
    </div>
  </body>
</html>
