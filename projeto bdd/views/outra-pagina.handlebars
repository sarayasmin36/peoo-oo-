  <header>
    <h3> &#10036; Eventario </h3> <!-- Cabeçalho com o nome do sistema "Eventario" -->
  </header>

    <h1>Participe</h1> <!-- Título principal da página "Participe" -->
    <h2>Participe de eventos!</h2> <!-- Subtítulo explicativo sobre o que o usuário pode fazer -->
    <h5>Eventos disponíveis:</h5> <!-- Título da seção que lista os eventos disponíveis -->

    <body>
      <div class="container2"> <!-- Container que envolve a tabela de eventos -->
        <table class="table table-striped"> <!-- Tabela para exibir os eventos -->
          <thead> <!-- Cabeçalho da tabela -->
            <tr>
              <th scope="col">ID</th> <!-- Coluna de ID -->
              <th scope="col">Nome do Evento</th> <!-- Coluna de Nome do Evento -->
              <th scope="col">Organizador</th> <!-- Coluna de Organizador -->
              <th scope="col">Data</th> <!-- Coluna de Data -->
              <th scope="col">Lugar</th> <!-- Coluna de Lugar -->
              <th scope="col">Ações</th> <!-- Coluna de Ações -->
            </tr>
          </thead>
          <tbody> <!-- Corpo da tabela onde os eventos são listados -->
            {{#each eventos}} <!-- Loop para exibir todos os eventos -->
              <tr>
                <td>{{this.codigo}}</td> <!-- Exibe o código do evento -->
                <td>{{this.nome}}</td> <!-- Exibe o nome do evento -->
                <td>{{this.organizador}}</td> <!-- Exibe o organizador do evento -->
                <td>{{datas_formatada}}</td> <!-- Exibe a data formatada do evento -->
                <td>{{this.lugar}}</td> <!-- Exibe o lugar do evento -->
                <td class="botoes-acao"> <!-- Coluna de botões de ação -->
                  <!-- Botão Editar -->
                  <a href="/eventos/{{codigo}}/editar">
                    <button class="btn-editar">Editar</button> <!-- Botão para editar o evento -->
                  </a>

                  <!-- Botão Deletar -->
                  <form action="/eventos/{{codigo}}/excluir" method="POST">
                    <button class="btn-excluir" type="submit" onclick="return confirm('Deseja realmente excluir este evento?')">Excluir</button> <!-- Botão para excluir o evento -->
                  </form>
                </td>
              </tr>
            {{else}} <!-- Caso não haja eventos -->
              <tr>
                <td colspan="6" class="text-center">Nenhum evento encontrado</td> <!-- Mensagem caso não existam eventos -->
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <script src="/bootstrap/js/bootstrap.bundle.min.js"></script> <!-- Inclusão do script do Bootstrap -->

      <h2>Inscrever Participante</h2> <!-- Título para a seção de inscrição de participante -->
      <form id="participante-form" action="/participar" method="POST"> <!-- Formulário para inscrever o participante -->
        <label for="participante-nome">Nome do Participante:</label> <!-- Rótulo para o campo de nome do participante -->
        <input type="text" name="nome" id="participante-nome" placeholder="Insira um nome completo" required> <!-- Campo para inserir o nome do participante -->

        <label for="participante-email">E-mail:</label> <!-- Rótulo para o campo de e-mail -->
        <input type="email" name="email" id="participante-email" required> <!-- Campo para inserir o e-mail do participante -->

        <label for="evento-selecionado">Escolha um evento:</label> <!-- Rótulo para o campo de escolha do evento -->
        <select style="width: 1169px;"  id="evento-selecionado" name="evento_id" required> <!-- Campo de seleção para o evento -->
          <option value="" disabled selected>Selecione um evento</option> <!-- Opção inicial desabilitada -->
          {{#each eventos}} <!-- Loop para listar os eventos -->
            <option value="{{this.codigo}}">{{this.nome}}</option> <!-- Exibe os eventos na lista -->
          {{/each}}
        </select>

        <button type="submit">Inscrever</button> <!-- Botão para enviar a inscrição -->
      </form>
    </section>

    <div class="container1"> <!-- Container para os botões de navegação -->
      <a href="/participantes"> <!-- Link para a lista de participantes -->
        <button>Clique aqui para ver lista de participantes </button> <!-- Botão para ver lista de participantes -->
      </a>

