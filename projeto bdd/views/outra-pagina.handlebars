    <script>
      document.addEventListener("DOMContentLoaded", function () { // Aguarda o carregamento completo do conteúdo
        document.getElementById("participante-form").addEventListener("submit", function (event) { // Adiciona evento ao formulário de inscrição
          event.preventDefault(); // Impede o envio imediato do formulário

          // Exibe o pop-up
          document.getElementById("popup").style.display = "block"; // Exibe o pop-up de confirmação

          // Simula o envio após 2 segundos (para dar tempo do usuário ver)
          setTimeout(() => {
            event.target.submit(); // Envia o formulário após o delay
          }, 2000); // Tempo de espera antes de enviar o formulário
        });

        // Função para fechar o pop-up
        window.fecharPopup = function () {
          document.getElementById("popup").style.display = "none"; // Fecha o pop-up
        };
      });
    </script>

    <!-- Estrutura do pop-up -->
    <div id="popup" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
      background: white; padding: 20px; border: 2px solid #f572cedc; box-shadow: 0px 0px 10px rgba(0,0,0,0.2);">
      <p>✅ Participação confirmada! Redirecionando...</p> <!-- Mensagem do pop-up de confirmação -->
      <button onclick="fecharPopup()">Fechar</button> <!-- Botão para fechar o pop-up -->
    </div>

